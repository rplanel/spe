
process.executor = 'slurm'


params {
       cpus = 1
       pvalue = 1
       distance = 1
       sketchSize = 400
       kmerSize = 16
       scripts = "./scripts"
       scratch = 'data'
       

}

process {
	maxForks = ${params.cpus}
	
}

env {
     //NXF_OPTS="-Xmx2g -Xms2g"
}

profiles {

	 standard {

	 	  process {
		  	  executor = 'local'
		  	  maxForks = ${params.cpus}
		  }
		  executor {
		  	   queueSize = 1
		  }
	 	  
}

	cluster {
		process {
			executor = 'slurm'
			queue = 'normal'
			maxForks = ${params.cpus}
			cpus     = ${params.cpus}
			

			
		}
		executor.jobName   = ${task.name}
	}
}


trace {
    enabled = true
    raw = true
}

timeline {
	 enabled = true

}
