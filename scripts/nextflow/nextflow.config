params {
       cpus = 1
       pvalue = 1
       distance = 1
       sketchSize = 400
       kmerSize = 16
       scripts = "./scripts"
       scratch = 'data'
       distances = [0.01, 0.02, 0.025, 0.03, 0.035, 0.04, 0.05, 0.06, 0.07, 0.08, 0.09, 0.10, 0.11, 0.12]
       //distances = [0.12]

}

process {
	maxForks = ${params.cpus}
	
}


profiles {

	 standard {

	 	  process {
		  	  executor = 'local'
		  	  maxForks = ${params.cpus}
		  }
		  executor {
		  	   queueSize = 2
		  }
	 	  
}

	cluster {
		process {
			executor = 'slurm'
			queue = 'normal'
			maxForks = 24	
			cpus     = 1
			$all_vs_all_distance.cpus = 20
			
		}
		executor {
			 queueSize = 24
			 jobName   = ${task.name}
			 exitReadTimeout = '360 sec'
		}
	}
}


trace {
      enabled = true
      raw = true
      file = "${params.dataDir}/runs/${params.seqSrc}/${params.seqType}/${params.kmerSize}-${params.sketchSize}/trace.txt"
}

timeline {
	 enabled = true	
	 file="${params.dataDir}/runs/${params.seqSrc}/${params.seqType}/${params.kmerSize}-${params.sketchSize}/timeline.html"
}	 
